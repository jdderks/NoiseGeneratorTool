<Window x:Class="MVVM.MainView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM.MainView"
        mc:Ignorable="d"
        Title="Joris' noise generator tool" Height="450" Width="800" ResizeMode="NoResize">

    <!--Wanneer je het viewmodel wilt assignen in xaml; nu heb je intellisense-->
    <Window.DataContext>
        <local:MainWindowVM/>
    </Window.DataContext>


    <!--Buiten grid-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!--Menubalk-->
        <Menu Grid.Row="0">
            <MenuItem Header="Bestand">
                <MenuItem Header="New"/>
                <MenuItem Header="Open"/>
                <MenuItem Header="Save"/>
                <MenuItem Header="Save as .."/>
                <Separator/>
                <MenuItem Header="Exit" Command="{Binding ExitCommand}"/>
            </MenuItem>

            <MenuItem Header="Opties">

            </MenuItem>
        </Menu>

        <!--Binnengrid-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="367"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1" Orientation="Vertical">
                <Image Height="300" Width="300" Margin="10,10,10,10" Source="{Binding DisplayImage}" Cursor="Cross"/>
            </StackPanel>
            
            <TextBox HorizontalAlignment="Left" Text="{Binding Text}" TextWrapping="Wrap" VerticalAlignment="Top" Width="235" Height="27" Margin="165,10,0,0"/>
            <Label Content="Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="27" Width="99"/>
            <Label Content="Seed" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top" Height="27" Width="99"/>
            <TextBox MaxLength="10" PreviewTextInput="TextBox_PreviewTextInput" HorizontalAlignment="Left" Text="{Binding Seed}" TextWrapping="Wrap" VerticalAlignment="Top" Width="235" Height="27" Margin="165,42,0,0"/>
            <Label Content="Randomize" HorizontalAlignment="Left" Margin="10,74,0,0" VerticalAlignment="Top" Height="27" Width="140"/>
            <CheckBox Margin="384,81,0,230" PreviewTextInput="TextBox_PreviewTextInput" HorizontalAlignment="Left" Width="16"></CheckBox>
        </Grid>

        <!--Knoppenbalk -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" FlowDirection="RightToLeft">

            <Button Width="80" Height="24" Margin="20,0,0,0" Content="Exit" Command="{Binding ExitCommand}"/>
            <Button Width="80" Height="24" Margin="20,0,0,0" Content="Config" Click="ConfigButton_Click"/>
            <Button Width="80" Height="24" Margin="20,0,0,0" Content="Generate" Command="{Binding GenerateCommand}"/>
            <ComboBox Width="140" Height="24" Margin="20,0,0,0">
                <ComboBoxItem  IsSelected="True">White Noise</ComboBoxItem>
                <ComboBoxItem>Smooth White Noise</ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <!--Status bar-->
        <StatusBar Grid.Row="3">

        </StatusBar>
    </Grid>
</Window>
